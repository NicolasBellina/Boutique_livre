{
  "name": "librairie-pro-backend",
  "version": "0.1.0",
  "description": "Backend API for LibrairiePro - Library Management System",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "build": "echo 'No build needed for Node.js'",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit/",
    "test:api": "jest tests/api/",
    "test:coverage": "jest --coverage --coverageReporters=html",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:reset": "prisma migrate reset --force",
    "prisma:seed": "node prisma/seed.js",
    "prisma:studio": "prisma studio",
    "prisma:status": "prisma migrate status"
  },
  "keywords": [
    "library",
    "book",
    "order",
    "event",
    "management"
  ],
  "author": "ESGI M1",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "prisma": "^5.7.0",
    "supertest": "^6.3.4",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=16.14.0",
    "npm": ">=7.0.0"
  }
}
